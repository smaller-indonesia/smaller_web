{% extends "layout/layout.twig" %}

{% block content %}

<div id="content" class="container">
    <div class="row">

        <div class="col-md-12">
            {% include 'layout/flash.twig' %}
        </div>

        <div class="col-md-12">
            <h1><i class="fas fa-user"></i> {{ 'User'|trans }}</h1>
            <hr>
            <form>
                <div class="form-group">
                    <label>{{ 'User-ID'|trans }}:</label>
                    <label>{{ user.id }}</label>
                </div>
                <div class="form-group">
                    <label for="username">{{ 'Username'|trans }}</label>
                    <input type="text" id="username" value="{{ user.username }}" class="form-control" readonly>
                </div>
                <div class="form-group">
                    <label for="email">{{ 'E-Mail'|trans }}</label>
                    <input type="text" id="email" value="{{ user.email }}" class="form-control" readonly>
                </div>
                <!-- <button type="submit" class="btn btn-primary">Submit</button> -->
            </form>
            <p></p>
        </div>
    </div>
</div>
{% endblock %}
